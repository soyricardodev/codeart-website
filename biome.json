{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"formatter": {
		"formatWithErrors": true,
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"globals": ["Astro"]
	}
}
