{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml, package-lock.json, yarn.lock, bun.lockb",
    "README.md": "CONTRIBUTING.md",
    "astro.config.mjs": "biome.json, postcss.config.mjs, tailwind.config.mjs, tsconfig.json"
  },
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "files.associations": {
    "*.svg": "html"
  },
  "[astro]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass", "class:list"]
}
