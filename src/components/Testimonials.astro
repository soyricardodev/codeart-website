---
import { Testimonials as TestimonialsMarquee } from "./testimonials";
---

<div class="mx-auto max-w-screen-xl px-5">
	<div class="mt-24">
		<h2
			class="animate-fade-in-up text-center font-display text-4xl font-bold lg:text-5xl lg:tracking-tight"
		>
			<span class="text-primary">Testimonios</span> de Clientes
		</h2>
		<p class="mt-4 text-pretty text-center text-lg text-secondary-foreground">
			Codeart es una empresa de tecnología que se dedica a la innovación y la creación de soluciones
		</p>
	</div>
</div>

<div class="relative mt-10 overflow-x-clip">
	<div class="bg-gradient-radial absolute -top-10 right-1/3 -z-10 h-96 w-96 from-blue-100 blur-2xl">
	</div>
	<div
		class="bg-gradient-radial absolute right-1/3 top-10 -z-10 h-96 w-96 translate-x-2/3 from-purple-100 via-blue-200 to-sky-500 blur-2xl"
	>
	</div>
	<div class="marquee-container mx-auto w-full">
		<TestimonialsMarquee client:visible />
	</div>
</div>

<style>
	@keyframes fade-in-up {
		from {
			opacity: 0;
			transform: translateY(100px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	h2,
	p,
	.marquee-container {
		view-timeline-name: --testimonial-title;
		view-timeline-axis: block;

		animation-timeline: --testimonial-title;
		animation-name: fade-in-up;

		animation-range: entry 10% cover 40%;
		animation-fill-mode: both;
	}
</style>
